{
    "name": "yu2ry/hw4",
    "description": "Otus",
    "authors": [
        {
            "name": "Yury Borisov",
            "email": "yu2ry@rambler.ru"
        }
    ],
    "require": {
        "php": "^7.3",
        "bramus/router": "~1.6",
        "squizlabs/php_codesniffer": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Yu2ry\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": [
            "./vendor/bin/phpunit -v --coverage-text --colors=always"
        ],
        "lint": [
            "./vendor/bin/phpcs --colors --report-summary --report-source --report-width=1080 --warning-severity=0 --standard=PSR2"
        ]
    }
}
