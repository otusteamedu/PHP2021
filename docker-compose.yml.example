# версия синтаксиса
version: '3'

# в этом блоке мы описываем контейнеры, которые будут запускаться
services:
  #Контейнер с PHP, назовём его app
  app:
    # Если нет секции build, то система будет искать образ в репозиториях
    build:
      context: ./fpm
      dockerfile: Dockerfile
    image: search/php # имя будущего образа
    container_name: app # имя контейнера после запуска
    volumes:
      - ./code:/data/redis.local
    # мы можем создать для контейнеров внутреннюю сеть
    networks:
      - app-network

  #Контейнер с мускулем
  db:
    build:
      context: ./mysql
      dockerfile: Dockerfile
    container_name: mysql_57
    environment:
      - MYSQL_DATABASE=docker_demo
      - MYSQL_ROOT_PASSWORD=root123
    restart: always
    # проброс портов
    ports:
      - "3306:3306"
    volumes:
      - ./mysql_data:/var/lib/mysql
    networks:
      - app-network

  #Контейнер для RabbitMQ
  rabbitmq:
    image: rabbitmq:3.9.8-management
    working_dir: /rabbitmq
    hostname: rabbit-mq
    container_name: 'rabbit-mq'
    ports:
      - 15672:15672
      - 5672:5672
    environment:
      RABBITMQ_DEFAULT_USER: user
      RABBITMQ_DEFAULT_PASS: password
    networks:
      - app-network

  #Контейнер с Nginx
  webserver:
    build:
      context: ./nginx
      dockerfile: Dockerfile
    image: search/nginx
    container_name: nginx
    # проброс портов
    ports:
      - "80:80"
    volumes:
      - ./code:/data/redis.local
    depends_on:
      - app
      - rabbitmq
      - db
    networks:
      - app-network

#Docker Networks
networks:
  app-network:
    driver: bridge
