# версия синтаксиса
version: '3'

# в этом блоке мы описываем контейнеры, которые будут запускаться
services:
  #Контейнер с PHP, назовём его app
  app:
    # Если нет секции build, то система будет искать образ в репозиториях
    build:
      context: ./fpm
      dockerfile: Dockerfile
    image: search/php # имя будущего образа
    container_name: app # имя контейнера после запуска
    volumes:
      - ./code:/data/youtube.local
    # мы можем создать для контейнеров внутреннюю сеть
    networks:
      - app-network

  #Контейнер с мускулем
  db:
    image: mysql:5.7
    container_name: mysql_57
    restart: always
    environment:
      - MYSQL_DATABASE=docker_demo
      - MYSQL_ROOT_PASSWORD=root123
    # проброс портов
    ports:
      - "3306:3306"
    volumes:
      - ./mysql:/var/lib/mysql
    networks:
      - app-network

  #Контейнер с ElasticSearch
  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:7.14.0
    container_name: elasticsearch
    environment:
      - discovery.type=single-node
    ports:
      - "9200:9200"
      - "9300:9300"
    volumes:
      - ./elasticsearch:/usr/share/elasticsearch/data
    networks:
      - app-network

  #Контейнер с Nginx
  webserver:
    build:
      context: ./nginx
      dockerfile: Dockerfile
    image: search/nginx
    container_name: nginx
    # проброс портов
    ports:
      - "80:80"
    volumes:
      - ./code:/data/youtube.local
    depends_on:
      - app
      - db
      - elasticsearch
    networks:
      - app-network

#Docker Networks
networks:
  app-network:
    driver: bridge
