# версия синтаксиса
version: '3'

# в этом блоке мы описываем контейнеры, которые будут запускаться
services:
  #Контейнер с PHP, назовём его app
  app:
    # Если нет секции build, то система будет искать образ в репозиториях
    build:
      context: ./fpm
      dockerfile: Dockerfile
    image: search/php # имя будущего образа
    container_name: app # имя контейнера после запуска
    volumes:
      - ./code:/data/redis.local
    # мы можем создать для контейнеров внутреннюю сеть
    networks:
      - app-network

  #Контейнер для redis
  redis:
    container_name: redis
    build: ./redis
    volumes:
      - ./redis:/data
    ports:
      - "6379:6379"
    networks:
      - app-network

  #Контейнер с Nginx
  webserver:
    build:
      context: ./nginx
      dockerfile: Dockerfile
    image: search/nginx
    container_name: nginx
    # проброс портов
    ports:
      - "80:80"
    volumes:
      - ./code:/data/redis.local
    depends_on:
      - app
      - redis
    networks:
      - app-network

#Docker Networks
networks:
  app-network:
    driver: bridge
